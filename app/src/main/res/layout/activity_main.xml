<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:freezesText="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.mac.takehomeassignment04_mengqiz.MainActivity">

        <EditText
            android:id="@+id/type_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Animal type"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/leg_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Howm many legs"
            android:inputType="textCapWords" />

        <CheckBox
            android:id="@+id/fur_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Has fur?"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/info_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="More information about the animal"
            android:inputType="textCapWords" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#D3D3D3"
            android:onClick="submit"
            android:text="submit"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>




